<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:gravity="center_vertical"
    android:background="#fafafa"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
        <ImageButton
            android:id="@+id/ib1"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="#D1D4FF"
            android:layout_margin="10dp"
            android:src="@drawable/baseline_route_24" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Search Route"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
        <ImageButton
            android:id="@+id/ib2"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="#D1D4FF"
            android:layout_margin="10dp"
            android:src="@drawable/baseline_sensors_24" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Current Air Quality"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
        <ImageButton
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/ib3"
            android:background="#D1D4FF"
            android:layout_margin="10dp"
            android:src="@drawable/baseline_edit_24" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Edit Profile"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recordActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
        <ImageButton
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/ib4"
            android:background="#D1D4FF"
            android:layout_margin="10dp"
            android:src="@drawable/baseline_directions_run_24" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Record Activity"
                android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="20dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
    <ImageButton
        android:id="@+id/ib5"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_margin="10dp"
        android:background="#D1D4FF"
        android:src="@drawable/baseline_notes_24" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Past Activities"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>
